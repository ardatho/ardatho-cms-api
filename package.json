{
  "name": "@ardatho/base-manager-api",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "nodemon",
    "generate": "graphql-codegen",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "test": "DOTENV_CONFIG_PATH=.env.test jest --setupFiles=dotenv/config",
    "test:watch": "DOTENV_CONFIG_PATH=.env.test jest --setupFiles=dotenv/config --watch",
    "test:cov": "DOTENV_CONFIG_PATH=.env.test jest --setupFiles=dotenv/config --coverage",
    "start": "NODE_PATH=src ts-node -r dotenv/config ./src/server.ts",
    "knex": "knex init",
    "migrate:make": "knex migrate:make -x ts",
    "migrate:up": "knex migrate:up",
    "migrate:down": "knex migrate:down",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@apollo/server": "^4.7.4",
    "@graphql-tools/load-files": "^6.6.0",
    "@graphql-tools/merge": "^8.3.0",
    "@graphql-tools/utils": "^9.2.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dataloader": "^2.2.2",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "graphql": "^16.5.0",
    "graphql-constraint-directive": "^5.1.1",
    "graphql-depth-limit": "^1.1.0",
    "graphql-middleware": "^6.1.35",
    "graphql-parse-resolve-info": "^4.13.0",
    "graphql-shield": "^7.6.5",
    "graphql-tag": "^2.12.6",
    "graphql-voyager": "^1.2.0",
    "jsonwebtoken": "^9.0.0",
    "knex": "^3.1.0",
    "moment": "^2.30.1",
    "mysql2": "^3.9.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.3.1",
    "@graphql-codegen/typescript": "^3.0.4",
    "@graphql-codegen/typescript-resolvers": "^3.2.1",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/cors": "^2.8.13",
    "@types/graphql-depth-limit": "^1.1.3",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/knex": "^0.16.1",
    "@types/node": "^20.1.0",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --check",
      "eslint --ignore-path .gitignore --max-warnings 0"
    ]
  }
}
